# Test all modular workflows quickly (dry-run)
act-test-all: act-check
	@echo "$(CYAN)üß™ Testing all workflows (dry-run)...$(NC)"
	@for workflow in .github/workflows/*.yml; do \
		echo "$(BLUE)Testing: $$workflow$(NC)"; \
		act push $(ACT_FLAGS) --workflows $$workflow --dry-run || echo "$(YELLOW)‚ö†Ô∏è $$workflow failed dry-run$(NC)"; \
	done
	@echo "$(GREEN)‚úÖ All workflows tested$(NC)"

# Setup act configuration files
act-setup: act-check
	@echo "$(CYAN)‚öôÔ∏è  Setting up act configuration...$(NC)"
	@if [ ! -f ".actrc" ]; then \
		echo "$(CYAN)Creating .actrc configuration...$(NC)"; \
		echo "# Act configuration for resume-as-code" > .actrc; \
		echo "--platform ubuntu-latest=catthehacker/ubuntu:act-latest" >> .actrc; \
		echo "--container-architecture linux/amd64" >> .actrc; \
		echo "--artifact-server-path /tmp/artifacts" >> .actrc; \
		echo "$(GREEN)‚úÖ .actrc created$(NC)"; \
	else \
		echo "$(GREEN)‚úÖ .actrc already exists$(NC)"; \
	fi
	@if [ ! -f ".env.act" ]; then \
		echo "$(CYAN)Creating .env.act environment file...$(NC)"; \
		echo "# Environment variables for act" > .env.act; \
		echo "GITHUB_TOKEN=your_github_token_here" >> .env.act; \
		echo "NODE_ENV=test" >> .env.act; \
		echo "NETLIFY_AUTH_TOKEN=your_netlify_token_here" >> .env.act; \
		echo "NETLIFY_SITE_ID=your_netlify_site_id_here" >> .env.act; \
		echo "$(GREEN)‚úÖ .env.act created - Please update with your tokens$(NC)"; \
		echo "$(YELLOW)‚ö†Ô∏è  Remember to add your actual tokens to .env.act$(NC)"; \
	else \
		echo "$(GREEN)‚úÖ .env.act already exists$(NC)"; \
	fi

# =============================================================================
# üöÄ Local Development Without Docker (Revolutionary)
# =============================================================================

# Check if local dependencies are installed
check-local-deps:
	@echo "$(CYAN)üîç Checking local dependencies...$(NC)"
	@command -v node >/dev/null 2>&1 || { echo "$(RED)‚ùå Node.js is not installed$(NC)"; exit 1; }
	@command -v npm >/dev/null 2>&1 || { echo "$(RED)‚ùå npm is not installed$(NC)"; exit 1; }
	@NODE_VERSION=$$(node --version); echo "$(GREEN)‚úÖ Node.js: $$NODE_VERSION$(NC)"
	@NPM_VERSION=$$(npm --version); echo "$(GREEN)‚úÖ npm: $$NPM_VERSION$(NC)"
	@if [ -f "package.json" ]; then echo "$(GREEN)‚úÖ package.json found$(NC)"; else echo "$(YELLOW)‚ö†Ô∏è package.json not found$(NC)"; fi

# Install dependencies locally (no Docker)
install-local: check-local-deps
	@echo "$(CYAN)üì¶ Installing local dependencies...$(NC)"
	@npm ci
	@echo "$(GREEN)‚úÖ Dependencies installed$(NC)"

# Development server using act local environment
dev-local: act-check check-local-deps
	@echo "$(PURPLE)üöÄ Starting development using act local environment...$(NC)"
	@echo "$(CYAN)‚ö° No Docker required - using host Node.js environment$(NC)"
	@echo "$(YELLOW)üí° Environment: RUN_LOCAL=true$(NC)"
	@if [ ! -f "node_modules/.bin/nodemon" ]; then npm install; fi
	@RUN_LOCAL=true NODE_ENV=development npm run dev

# Build using act local environment
build-local: act-check check-local-deps
	@echo "$(GREEN)üèóÔ∏è Building using act local environment...$(NC)"
	@echo "$(CYAN)‚ö° No Docker required - using host Node.js environment$(NC)"
	@RUN_LOCAL=true NODE_ENV=production npm run build
	@echo "$(GREEN)‚úÖ Build completed successfully!$(NC)"
	@echo "$(CYAN)üìÅ Output files:$(NC)"
	@echo "  - HTML: $(GREEN)./dist/index.html$(NC)"
	@echo "  - PDF:  $(GREEN)./dist/resume.pdf$(NC)"
	@echo "  - Assets: $(GREEN)./dist/assets/$(NC)"

# Test using act local environment
test-local: act-check check-local-deps
	@echo "$(BLUE)üß™ Testing using act local environment...$(NC)"
	@echo "$(CYAN)‚ö° No Docker required - using host Node.js environment$(NC)"
	@RUN_LOCAL=true npm test
	@echo "$(GREEN)‚úÖ Tests completed successfully!$(NC)"

# Test build workflow using act with local environment
act-build-local: act-check
	@echo "$(PURPLE)üèóÔ∏è Testing build workflow with act (local environment)...$(NC)"
	@echo "$(CYAN)‚ö° Using local Node.js instead of Docker containers$(NC)"
	@act push $(ACT_LOCAL_FLAGS) --job build --env RUN_LOCAL=true --verbose

# Comprehensive local development workflow  
dev-workflow-local: act-check
	@echo "$(PURPLE)üîÑ Running complete development workflow locally...$(NC)"
	@echo "$(CYAN)Phase 1: Installing dependencies$(NC)"
	@$(MAKE) install-local
	@echo "$(CYAN)Phase 2: Building project$(NC)"
	@$(MAKE) build-local
	@echo "$(CYAN)Phase 3: Running tests$(NC)"
	@$(MAKE) test-local
	@echo "$(GREEN)üéâ Complete local workflow finished successfully!$(NC)"

# Compare Docker vs Local performance
benchmark-docker-vs-local: act-check docker-check
	@echo "$(CYAN)‚ö° Benchmarking Docker vs Local performance...$(NC)"
	@echo "$(BLUE)Testing Docker build...$(NC)"
	@time $(MAKE) build > /dev/null 2>&1 || echo "$(YELLOW)Docker build failed$(NC)"
	@echo "$(BLUE)Testing Local build...$(NC)"
	@time $(MAKE) build-local > /dev/null 2>&1 || echo "$(YELLOW)Local build failed$(NC)"
	@echo "$(GREEN)‚úÖ Benchmark completed!$(NC)"

