	@echo "$(PURPLE)üß™ ARM64 End-to-End Testing with Act...$(NC)"
	@echo "$(CYAN)üéØ Testing complete ARM64 workflow locally$(NC)"
	@echo "$(BLUE)üìã Architecture: linux/arm64$(NC)"
