{
  "enabled": true,
  "updateFields": {
    "lastUpdated": {
      "enabled": true,
      "field": "meta.lastUpdated",
      "value": "current_date",
      "format": "YYYY-MM-DD"
    },
    "availability": {
      "enabled": true,
      "field": "basics.availability",
      "value": "open_to_work",
      "display": {
        "open_to_work": {
          "icon": "ðŸŸ¢",
          "text": "Open to Work",
          "types": ["Full-time", "Contract"]
        },
        "not_available": {
          "icon": "ðŸŸ¡",
          "text": "Currently Employed",
          "types": []
        }
      }
    },
    "websiteUrls": {
      "enabled": true,
      "fields": [
        "basics.url",
        "projects[0].url"
      ],
      "productionUrl": "https://rafilkmp3.github.io/resume-as-code/",
      "replacements": {
        "deploy-preview-*": "https://rafilkmp3.github.io/resume-as-code/",
        "resume-as-code.netlify.app": "https://rafilkmp3.github.io/resume-as-code/",
        "localhost:*": "https://rafilkmp3.github.io/resume-as-code/"
      }
    },
    "currentPosition": {
      "enabled": false,
      "field": "work[0].endDate",
      "value": null,
      "condition": "if_current_position",
      "description": "Automatically set endDate to null (Present) for current position"
    },
    "projectHighlights": {
      "enabled": true,
      "field": "projects[0].highlights",
      "append": [
        "Released v{{version}} with enhanced industry-standard version management and comprehensive CI/CD pipeline",
        "Achieved {{commits_total}}+ commits demonstrating continuous improvement and modern development practices"
      ],
      "maxHighlights": 6,
      "description": "Adds version and commit milestones to Resume-as-Code project"
    }
  },
  "conditionalUpdates": {
    "timeBased": {
      "enabled": true,
      "minimumDaysBetweenUpdates": 30,
      "description": "Only update if it's been more than 30 days since last update"
    },
    "versionBased": {
      "enabled": true,
      "triggerOnVersionTypes": ["major", "minor"],
      "description": "Only trigger updates for significant version releases"
    }
  },
  "meta": {
    "description": "Configuration for automatically updating resume data during releases",
    "version": "1.0.0",
    "lastModified": "2025-08-18",
    "usage": [
      "node scripts/resume-auto-updater.js           # Apply updates",
      "node scripts/resume-auto-updater.js --dry-run # Preview changes",
      "node scripts/resume-auto-updater.js --config  # Show config"
    ]
  }
}