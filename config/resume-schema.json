{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "resume-schema.json",
  "title": "Resume Data Schema",
  "description": "JSON Schema for resume-data.json validation in resume-as-code project",
  "type": "object",
  "required": ["basics", "work", "skills"],
  "additionalProperties": false,
  "properties": {
    "basics": {
      "type": "object",
      "required": ["name", "label", "email", "summary", "location", "profiles"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Full name"
        },
        "label": {
          "type": "string",
          "minLength": 1,
          "description": "Professional title/headline"
        },
        "image": {
          "type": "string",
          "description": "Profile image path"
        },
        "email": {
          "type": "string",
          "pattern": "^[^@]+@[^@]+\\.[^@]+$",
          "description": "Email address"
        },
        "phone": {
          "type": "string",
          "description": "Phone number"
        },
        "url": {
          "type": "string",
          "description": "Personal website URL"
        },
        "summary": {
          "type": "string",
          "minLength": 50,
          "description": "Professional summary"
        },
        "location": {
          "type": "object",
          "required": ["city", "countryCode"],
          "additionalProperties": false,
          "properties": {
            "city": {
              "type": "string",
              "minLength": 1
            },
            "countryCode": {
              "type": "string",
              "pattern": "^[A-Z]{2}$"
            },
            "region": {
              "type": "string"
            }
          }
        },
        "nationality": {
          "type": "string",
          "description": "Nationality"
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1,
          "description": "Spoken languages"
        },
        "profiles": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["network", "username", "url"],
            "additionalProperties": false,
            "properties": {
              "network": {
                "type": "string",
                "enum": [
                  "LinkedIn",
                  "GitHub",
                  "Calendly",
                  "WhatsApp",
                  "Twitter",
                  "Portfolio",
                  "Website"
                ]
              },
              "username": {
                "type": "string",
                "minLength": 1
              },
              "url": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "work": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "position", "startDate", "summary", "highlights"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Company name"
          },
          "position": {
            "type": "string",
            "minLength": 1,
            "description": "Job title"
          },
          "url": {
            "type": "string",
            "description": "Company website URL"
          },
          "startDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$",
            "description": "Start date in YYYY-MM format"
          },
          "endDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$",
            "description": "End date in YYYY-MM format (optional for current positions)"
          },
          "summary": {
            "type": "string",
            "minLength": 20,
            "description": "Brief role summary"
          },
          "highlights": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "string",
              "minLength": 30
            },
            "description": "Key achievements and responsibilities"
          }
        }
      }
    },
    "skills": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "keywords"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Skill category name"
          },
          "level": {
            "type": "string",
            "enum": ["Beginner", "Intermediate", "Advanced", "Expert"],
            "description": "Proficiency level"
          },
          "keywords": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            },
            "description": "Related technologies and tools"
          },
          "links": {
            "type": "object",
            "patternProperties": {
              ".*": {
                "type": "string",
                "description": "URL for the related technology or tool"
              }
            },
            "additionalProperties": false,
            "description": "Related links for skill documentation or examples"
          }
        }
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "highlights"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 20
          },
          "highlights": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 10
            }
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "startDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "endDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "url": {
            "type": "string"
          }
        }
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["institution", "area", "studyType"],
        "additionalProperties": false,
        "properties": {
          "institution": {
            "type": "string",
            "minLength": 1
          },
          "area": {
            "type": "string",
            "minLength": 1
          },
          "studyType": {
            "type": "string",
            "minLength": 1
          },
          "startDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "endDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "gpa": {
            "type": "string"
          },
          "courses": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "certifications": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "issuer"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "issuer": {
            "type": "string",
            "minLength": 1
          },
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "url": {
            "type": "string"
          }
        }
      }
    },
    "certificates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "issuer"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "issuer": {
            "type": "string",
            "minLength": 1
          },
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "url": {
            "type": "string"
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "description": "Metadata about the resume including last updated timestamp and availability status",
      "properties": {
        "lastUpdated": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Last updated date in YYYY-MM-DD format"
        },
        "availability": {
          "type": "object",
          "additionalProperties": false,
          "description": "Current work availability status",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["open_to_work", "not_available"],
              "description": "Work availability status"
            },
            "icon": {
              "type": "string",
              "description": "Icon representation of availability status"
            },
            "text": {
              "type": "string",
              "description": "Human-readable availability text"
            },
            "types": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Types of work opportunities available"
            }
          }
        }
      }
    }
  }
}
