{
  "name": "resume-as-code",
  "version": "1.2.1",
  "description": "Rafael Sathler's resume generation system",
  "main": "build.js",
  "scripts": {
    "build": "node build.js",
    "serve": "python3 -m http.server 3000 --directory dist",
    "dev": "node dev-server.js",
    "dev:old": "npm run build && npm run serve",
    "test": "playwright test",
    "test:ci": "playwright test --reporter=dot",
    "version:patch": "npm version patch && git push --follow-tags",
    "version:minor": "npm version minor && git push --follow-tags",
    "version:major": "npm version major && git push --follow-tags",
    "changelog": "echo 'Please update CHANGELOG.md manually before releasing'"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "puppeteer": "^22.8.2",
    "qrcode": "^1.5.4"
  },
  "keywords": [
    "resume",
    "cv",
    "portfolio",
    "devops",
    "sre"
  ],
  "author": "Rafael Bernardo Sathler",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rafilkmp3/resume-as-code.git"
  },
  "bugs": {
    "url": "https://github.com/rafilkmp3/resume-as-code/issues"
  },
  "homepage": "https://github.com/rafilkmp3/resume-as-code#readme",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.54.2",
    "lighthouse": "^12.8.1",
    "lighthouse-ci": "^1.13.1"
  }
}
