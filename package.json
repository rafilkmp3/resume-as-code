{
  "name": "resume-as-code",
  "version": "4.5.0",
  "description": "Rafael Sathler's resume generation system",
  "scripts": {
    "build": "node scripts/build.js",
    "serve": "node scripts/server.js",
    "serve:test": "PORT=3001 node scripts/server.js",
    "dev": "node scripts/dev-server.js",
    "test": "make test",
    "test:unit": "jest tests/unit/ --coverage --config=config/jest.config.js",
    "test:e2e": "playwright test --config=config/playwright.config.js",
    "test:fast": "make test-fast",
    "test:smart": "node scripts/smart-test.js auto",
    "test:local": "node scripts/smart-test.js local",
    "test:ci": "node scripts/smart-test.js ci",
    "test:trigger": "node scripts/smart-test.js trigger-ci",
    "e2e:test": "node scripts/e2e-testing/pipeline-orchestrator.js",
    "e2e:test:pr": "node scripts/e2e-testing/pipeline-orchestrator.js --scope pr-flow-only",
    "e2e:test:staging": "node scripts/e2e-testing/pipeline-orchestrator.js --scope staging-only",
    "e2e:test:release": "node scripts/e2e-testing/pipeline-orchestrator.js --scope release-flow-only",
    "e2e:test:dry": "node scripts/e2e-testing/pipeline-orchestrator.js --dry-run",
    "e2e:endpoints": "node scripts/e2e-testing/endpoint-monitor.js",
    "e2e:endpoints:staging": "node scripts/e2e-testing/endpoint-monitor.js --env staging",
    "e2e:endpoints:prod": "node scripts/e2e-testing/endpoint-monitor.js --env production",
    "e2e:endpoints:brightdata": "node scripts/e2e-testing/endpoint-monitor.js --brightdata",
    "version:patch": "npm version patch && git push --follow-tags",
    "version:minor": "npm version minor && git push --follow-tags",
    "version:major": "npm version major && git push --follow-tags",
    "version:auto": "node scripts/version-bump.js",
    "version:update-refs": "node scripts/update-version-refs.js",
    "version:inject": "node scripts/inject-version.js",
    "template:build": "node scripts/build-template.js",
    "changelog": "echo 'Please update CHANGELOG.md manually before releasing'",
    "dev:health": "node scripts/dev-tools.js health",
    "dev:perf": "node scripts/dev-tools.js perf",
    "dev:clean": "node scripts/dev-tools.js clean",
    "dev:setup": "node scripts/dev-tools.js setup",
    "perf:report": "node scripts/performance-monitor.js report",
    "perf:history": "node scripts/performance-monitor.js history",
    "perf:build": "node scripts/performance-monitor.js build",
    "perf:test": "node scripts/performance-monitor.js test",
    "ux:analyze": "node scripts/ux-analyzer.js",
    "accessibility:audit": "node scripts/accessibility-audit.js",
    "resume:update": "node scripts/resume-auto-updater.js",
    "resume:update:dry-run": "node scripts/resume-auto-updater.js --dry-run",
    "resume:update:config": "node scripts/resume-auto-updater.js --config",
    "resume:update:pr": "node -e \"const ResumeAutoUpdater = require('./scripts/resume-auto-updater.js'); const updater = new ResumeAutoUpdater(); updater.updateReleasePleasePR();\"",
    "context7:validate": "node scripts/context7-integration.js",
    "context7:docs": "echo 'Context7 real-time documentation available via MCP server integration'",
    "ai:commithelp": "echo 'Use conventional commits: feat|fix|chore|docs|style|refactor|perf|test|ci: description'"
  },
  "dependencies": {
    "@google-analytics/data": "^5.2.0",
    "canvas": "^3.1.2",
    "handlebars": "^4.7.8",
    "puppeteer": "^24.16.2",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.3"
  },
  "jest": {
    "preset": "./config/jest.config.js"
  },
  "keywords": [
    "resume",
    "cv",
    "portfolio",
    "devops",
    "sre"
  ],
  "author": "Rafael Bernardo Sathler",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rafilkmp3/resume-as-code.git"
  },
  "bugs": {
    "url": "https://github.com/rafilkmp3/resume-as-code/issues"
  },
  "homepage": "https://github.com/rafilkmp3/resume-as-code#readme",
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.54.2",
    "@puppeteer/browsers": "^2.5.0",
    "babel-jest": "^30.0.5",
    "chokidar": "^3.5.3",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "livereload": "^0.10.3"
  }
}
