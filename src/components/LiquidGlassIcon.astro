---
import { Icon } from 'astro-icon/components';

export interface Props {
  name: string;
  size?: string | number;
  class?: string;
  variant?: 'default' | 'intense' | 'subtle';
}

const { name, size = 24, class: className = '', variant = 'default' } = Astro.props;

// Convert size to pixels if it's a number
const iconSize = typeof size === 'number' ? `${size}px` : size;
---

<div class={`liquid-glass-icon liquid-glass-icon--${variant} ${className}`}>
  <Icon name={name} size={iconSize} />
</div>

<style>
  /* Base Liquid Glass Icon Container */
  .liquid-glass-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    position: relative;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    
    /* Multi-layer Liquid Glass Effect */
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 50%,
      rgba(255, 255, 255, 0.1) 100%
    );
    
    /* Advanced Backdrop Filter - Apple's signature blur + saturation */
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    
    /* Specular Highlights & Dynamic Shadows */
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.2),
      0 1px 0 rgba(255, 255, 255, 0.1);
    
    /* Translucent Border */
    border: 1px solid rgba(255, 255, 255, 0.2);
    
    /* Container Sizing */
    width: 48px;
    height: 48px;
  }
  
  /* Icon Styling - currentColor for native theming */
  .liquid-glass-icon :global(svg) {
    color: var(--foreground, currentColor);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
  }
  
  /* Hover Effects - Dynamic Lighting Response */
  .liquid-glass-icon:hover {
    transform: translateY(-2px) scale(1.05);
    
    /* Enhanced lighting on hover */
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.15) 0%,
      rgba(255, 255, 255, 0.08) 50%,
      rgba(255, 255, 255, 0.15) 100%
    );
    
    /* Intensified shadows and highlights */
    box-shadow: 
      0 12px 40px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.3),
      0 2px 0 rgba(255, 255, 255, 0.15);
    
    border-color: rgba(255, 255, 255, 0.3);
  }
  
  .liquid-glass-icon:hover :global(svg) {
    color: var(--link-color, var(--foreground, currentColor));
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.15));
  }
  
  /* Variant: Default */
  .liquid-glass-icon--default {
    /* Standard configuration - already applied above */
  }
  
  /* Variant: Intense - More pronounced effects */
  .liquid-glass-icon--intense {
    backdrop-filter: blur(25px) saturate(200%);
    -webkit-backdrop-filter: blur(25px) saturate(200%);
    
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.15) 0%,
      rgba(255, 255, 255, 0.08) 50%,
      rgba(255, 255, 255, 0.15) 100%
    );
    
    box-shadow: 
      0 10px 36px rgba(0, 0, 0, 0.12),
      inset 0 1px 0 rgba(255, 255, 255, 0.25),
      0 1px 0 rgba(255, 255, 255, 0.12);
  }
  
  /* Variant: Subtle - Minimal effects */
  .liquid-glass-icon--subtle {
    backdrop-filter: blur(15px) saturate(150%);
    -webkit-backdrop-filter: blur(15px) saturate(150%);
    
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.08) 0%,
      rgba(255, 255, 255, 0.03) 50%,
      rgba(255, 255, 255, 0.08) 100%
    );
    
    box-shadow: 
      0 6px 24px rgba(0, 0, 0, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.15),
      0 1px 0 rgba(255, 255, 255, 0.08);
  }
  
  /* Dark Theme Adaptations */
  [data-theme="dark"] .liquid-glass-icon {
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.05) 0%,
      rgba(255, 255, 255, 0.02) 50%,
      rgba(255, 255, 255, 0.05) 100%
    );
    
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1),
      0 1px 0 rgba(255, 255, 255, 0.05);
    
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  [data-theme="dark"] .liquid-glass-icon:hover {
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.08) 0%,
      rgba(255, 255, 255, 0.04) 50%,
      rgba(255, 255, 255, 0.08) 100%
    );
    
    box-shadow: 
      0 12px 40px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.15),
      0 2px 0 rgba(255, 255, 255, 0.08);
  }
  
  /* Accessibility: Reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce) {
    .liquid-glass-icon {
      transition: none;
    }
    
    .liquid-glass-icon:hover {
      transform: none;
    }
  }
</style>