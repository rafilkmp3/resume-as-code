---
import Layout from '../layouts/Layout.astro';
import LiquidGlassCard from '../components/LiquidGlassCard.astro';
import ContactButton from '../components/ContactButton.astro';
import QRCodeButton from '../components/QRCodeButton.astro';
import ProfilePhotoModal from '../components/ProfilePhotoModal.astro';
import LiquidGlassIcon from '../components/LiquidGlassIcon.astro';
import ResponsiveImage from '../components/ResponsiveImage.astro';
import resumeData from '../data/resume.json';

const { basics, work, skills, education, projects, certificates } = resumeData;

// Use build-time site URL from Astro config for consistent deployment URLs
// This leverages the same environment detection used in PDF API routes
const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'http://localhost:4321';
---

<Layout title={`${basics.name} - ${basics.label}`} description={basics.summary}>
  <main class="min-h-screen py-8 px-4">
    <div class="max-w-4xl lg:max-w-6xl xl:max-w-7xl mx-auto space-y-8 apple-motion-container">
      
      <!-- Hero Section with Advanced Liquid Glass -->
      <LiquidGlassCard id="header" variant="intense" class="text-center p-8 md:p-12 apple-section-animate">
        <div class="mb-6">
          <button 
            onclick={`showProfileModal('${basics.image}', '${basics.name}', '${basics.label}')`}
            class="profile-photo-button cursor-pointer transform transition-all duration-300 hover:scale-105 hover:shadow-2xl"
            aria-label={`View ${basics.name}'s profile photo in larger size`}
            type="button"
          >
            <ResponsiveImage 
              src={basics.image} 
              alt={basics.name}
              class="w-32 h-32 mx-auto rounded-full border-4 border-white/20 shadow-2xl"
              loading="eager"
              fetchpriority="high"
              width={128}
              height={128}
            />
          </button>
        </div>
        
        <!-- Apple-Style Name and Title Section -->
        <div class="text-center mb-8">
          <h1 class="apple-display-large mb-3">
            {basics.name}
          </h1>
          
          <h2 class="apple-subtitle mb-4">
            {basics.label}
          </h2>
        </div>

        <!-- Apple-Style Contact Information Card -->
        <div class="max-w-4xl mx-auto">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-3 lg:gap-4 mb-6">
            <!-- Email Contact Badge -->
            <a 
              href={`mailto:${basics.email}`}
              class="apple-contact-badge group"
              aria-label={`Email ${basics.name}`}
            >
              <div class="apple-contact-icon">
                <LiquidGlassIcon name="heroicons:envelope" size={20} variant="subtle" />
              </div>
              <div class="apple-contact-info">
                <div class="apple-contact-label">Email</div>
                <div class="apple-contact-value">{basics.email}</div>
              </div>
            </a>

            <!-- Phone Contact Badge -->
            <a 
              href={`tel:${basics.phone}`}
              class="apple-contact-badge group"
              aria-label={`Call ${basics.name}`}
            >
              <div class="apple-contact-icon">
                <LiquidGlassIcon name="heroicons:phone" size={20} variant="subtle" />
              </div>
              <div class="apple-contact-info">
                <div class="apple-contact-label">Phone</div>
                <div class="apple-contact-value">{basics.phone}</div>
              </div>
            </a>

            <!-- Location Contact Badge -->
            <a 
              href="https://maps.google.com/?q=Christ+the+Redeemer,+Rio+de+Janeiro,+Brazil"
              target="_blank"
              rel="noopener noreferrer"
              class="apple-contact-badge group"
              aria-label="View Rio de Janeiro location on Google Maps"
            >
              <div class="apple-contact-icon">
                <LiquidGlassIcon name="heroicons:map-pin" size={20} variant="subtle" />
              </div>
              <div class="apple-contact-info">
                <div class="apple-contact-label">Location</div>
                <div class="apple-contact-value">{basics.location.city}, {basics.location.region}</div>
              </div>
            </a>
          </div>
        </div>
      </LiquidGlassCard>

      <!-- Apple HIG Subtle Separator -->
      <div class="apple-separator" aria-hidden="true"></div>
      
      <!-- Connect & Download Section -->
      <LiquidGlassCard id="connect" class="p-8 apple-section-animate" data-apple-delay="1">
        <h2 class="apple-section-title text-center mb-8">
          <a href="#connect" class="hover:underline transition-all duration-200">
            Let's Connect
          </a>
        </h2>
        
        <!-- Contact Methods -->
        <div class="mb-8">
          <h3 class="apple-headline text-center mb-4">Get In Touch</h3>
          <div class="flex flex-col items-center gap-4 max-w-4xl mx-auto">
            <!-- First row: 3 buttons -->
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 w-full">
              <!-- LinkedIn -->
              <ContactButton
                icon="simple-icons:linkedin"
                label="Connect on LinkedIn"
                value="Professional profile"
                href="https://www.linkedin.com/in/rafaelbsathler/"
                network="LinkedIn"
              />
              
              <!-- GitHub -->
              <ContactButton
                icon="simple-icons:github"
                label="View GitHub"
                value="Code & projects"
                href="https://github.com/rafaelbsathler"
                network="GitHub"
              />
              
              <!-- Cal.com -->
              <ContactButton
                icon="heroicons:calendar"
                label="Book or Check Availability"
                value="Quick or long calls"
                href="https://cal.com/rafaelbsathler"
                network="cal.com"
              />
            </div>
            
            <!-- Second row: 2 buttons centered -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 w-full max-w-2xl">
              <!-- WhatsApp -->
              <ContactButton
                icon="simple-icons:whatsapp"
                label="Chat on WhatsApp"
                value="+55 21 997988682"
                href="https://wa.me/5521997988682"
                network="WhatsApp"
              />
              
              <!-- QR Code Button -->
              <QRCodeButton url={siteUrl} />
            </div>
          </div>
        </div>

        <!-- PDF Downloads -->
        <div>
          <h3 class="apple-headline text-center mb-4">Download PDF</h3>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <a 
              href={`${siteUrl}/pdf-screen`}
              class="glass-button-modern flex items-center px-6 py-4 font-medium transition-all group"
              target="_blank"
              rel="noopener noreferrer"
              data-pdf-type="screen"
            >
              <div class="mr-3">
                <LiquidGlassIcon name="heroicons:computer-desktop" size={20} variant="subtle" />
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-semibold">View Online</div>
                <div class="text-xs opacity-80">Interactive version</div>
              </div>
            </a>
            <a 
              href={`${siteUrl}/pdf-print`}
              class="glass-button-modern flex items-center px-6 py-4 font-medium transition-all group"
              target="_blank"
              rel="noopener noreferrer"
              data-pdf-type="print"
            >
              <div class="mr-3">
                <LiquidGlassIcon name="heroicons:printer" size={20} variant="subtle" />
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-semibold">Print PDF</div>
                <div class="text-xs opacity-80">Printer-friendly</div>
              </div>
            </a>
            <a 
              href={`${siteUrl}/pdf-ats`}
              class="glass-button-modern flex items-center px-6 py-4 font-medium transition-all group"
              target="_blank"
              rel="noopener noreferrer"
              data-pdf-type="ats"
            >
              <div class="mr-3">
                <LiquidGlassIcon name="heroicons:cpu-chip" size={20} variant="subtle" />
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-semibold">ATS PDF</div>
                <div class="text-xs opacity-80">Machine-readable</div>
              </div>
            </a>
          </div>
        </div>
      </LiquidGlassCard>

      <!-- Apple HIG Subtle Separator -->
      <div class="apple-separator" aria-hidden="true"></div>
      
      <!-- Enhanced Professional Summary Section - OCD-Friendly -->
      <LiquidGlassCard id="summary" class="p-8 apple-section-animate" data-apple-delay="2" role="region" aria-labelledby="summary-heading">
        <header class="mb-8">
          <h2 id="summary-heading" class="apple-section-title text-center">
            <a href="#summary" class="hover:underline transition-all duration-200" aria-describedby="summary-description">
              Professional Summary
            </a>
          </h2>
          <p id="summary-description" class="text-center apple-caption mt-2 opacity-75">
            10+ years building, securing, and scaling production systems
          </p>
        </header>
        
        <div class="professional-summary-container">
          <!-- Core Summary -->
          <div class="summary-core-section">
            <div class="summary-highlight-card">
              <div class="summary-icon-container" aria-hidden="true">
                <LiquidGlassIcon name="heroicons:rocket-launch" size={24} variant="default" />
              </div>
              <div class="summary-content">
                <h3 class="summary-role-title">Open Source Specialist</h3>
                <p class="summary-core-text">
                  10+ years of proven expertise building, securing, and scaling production platforms on AWS & GCP. 
                  Turn manual toil into GitOps pipelines so product teams ship faster — and sleep better. 
                  Specialized in ARM64 optimization, delivering enterprise migrations for 5,000+ engineers.
                </p>
              </div>
            </div>
          </div>
          
          <!-- Key Achievements Grid -->
          <div class="summary-achievements-grid" role="list" aria-label="Key professional achievements">
            <div class="summary-achievement-item" role="listitem">
              <div class="achievement-metric">10+</div>
              <div class="achievement-label">Years Experience</div>
            </div>
            <div class="summary-achievement-item" role="listitem">
              <div class="achievement-metric">85%</div>
              <div class="achievement-label">ARM Runner Performance Boost</div>
            </div>
            <div class="summary-achievement-item" role="listitem">
              <div class="achievement-metric">Zero</div>
              <div class="achievement-label">Downtime K8s Upgrades</div>
            </div>
            <div class="summary-achievement-item" role="listitem">
              <div class="achievement-metric">8K+</div>
              <div class="achievement-label">Repos Migrated</div>
            </div>
            <div class="summary-achievement-item" role="listitem">
              <div class="achievement-metric">5K+</div>
              <div class="achievement-label">Engineers Supported</div>
            </div>
            <div class="summary-achievement-item" role="listitem">
              <div class="achievement-metric">99.9%</div>
              <div class="achievement-label">Uptime Achievement</div>
            </div>
          </div>
          
          <!-- Expertise Areas -->
          <div class="summary-expertise-section">
            <h3 class="summary-section-title">Core Expertise</h3>
            <div class="summary-expertise-grid" role="list" aria-label="Technical expertise areas">
              <div class="expertise-item" role="listitem">
                <LiquidGlassIcon name="simple-icons:amazonwebservices" size={20} />
                <span>AWS/GCP Cloud Architecture</span>
              </div>
              <div class="expertise-item" role="listitem">
                <LiquidGlassIcon name="simple-icons:kubernetes" size={20} />
                <span>Kubernetes & Container Orchestration</span>
              </div>
              <div class="expertise-item" role="listitem">
                <LiquidGlassIcon name="heroicons:cpu-chip" size={20} />
                <span>DevOps & CI/CD Automation</span>
              </div>
              <div class="expertise-item" role="listitem">
                <LiquidGlassIcon name="heroicons:chart-bar" size={20} />
                <span>Infrastructure Optimization</span>
              </div>
              <div class="expertise-item" role="listitem">
                <LiquidGlassIcon name="heroicons:shield-check" size={20} />
                <span>Security & Compliance</span>
              </div>
              <div class="expertise-item" role="listitem">
                <LiquidGlassIcon name="heroicons:academic-cap" size={20} />
                <span>Technical Leadership</span>
              </div>
            </div>
          </div>
          
          <!-- Current Focus -->
          <div class="summary-focus-section">
            <div class="focus-highlight-card">
              <div class="focus-badge">
                <span>Recent Achievements</span>
              </div>
              <div class="focus-content">
                <p class="focus-text">
                  Implemented <strong>ARM64-optimized GitHub Actions</strong> with 85% performance improvements and 
                  <strong>zero-downtime Kubernetes upgrades</strong> (1.29 → 1.32). 
                  Led <strong>self-service Terraform/Atlantis</strong> rollout for 10+ squads, cutting infrastructure tickets by half.
                </p>
              </div>
            </div>
          </div>
        </div>
      </LiquidGlassCard>
      
      <!-- Apple HIG Subtle Separator -->
      <div class="apple-separator" aria-hidden="true"></div>
      
      <!-- Experience Section -->
      <LiquidGlassCard id="experience" class="p-8 apple-section-animate" data-apple-delay="3">
        <h2 class="apple-section-title text-center mb-8">
          <a href="#experience" class="hover:underline transition-all duration-200">
            Professional Experience
          </a>
        </h2>
        <div class="space-y-8" id="experience-container">
          {work.map((job, index) => (
            <div class={`experience-item ${index >= 3 ? 'hidden' : ''}`}>
              {/* Apple HIG Job Separator */}
              {index > 0 && <div class="apple-job-separator" aria-hidden="true"></div>}
              <div class="apple-experience-container">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
                <div>
                  <h3 class="apple-title-2">{job.position}</h3>
                  {job.url ? (
                    <a 
                      href={job.url} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="apple-title-3 hover:underline transition-all duration-200"
                      style="color: var(--link-color);"
                    >
                      {job.name}
                    </a>
                  ) : (
                    <p class="apple-title-3">{job.name}</p>
                  )}
                </div>
                <div class="mt-2 md:mt-0">
                  <p class="apple-caption text-sm">
                    {new Date(job.startDate).getFullYear()} - 
                    {job.endDate ? new Date(job.endDate).getFullYear() : 'Present'}
                  </p>
                </div>
              </div>
              
              {/* Job Summary */}
              {job.summary && (
                <div class="mb-4">
                  <p class="apple-body leading-relaxed">{job.summary}</p>
                </div>
              )}
              
              {/* Job Highlights */}
              {job.highlights && job.highlights.length > 0 && (
                <div class="space-y-2">
                  {job.highlights.map((highlight, idx) => (
                    <div class="flex items-start space-x-3">
                      <span class="apple-bullet-point" aria-hidden="true">•</span>
                      <p class="apple-body flex-1">{highlight}</p>
                    </div>
                  ))}
                </div>
              )}
              </div>
            </div>
          ))}
        </div>
        
        {/* Apple iOS-style Show More with Fade Hint */}
        {work && work.length > 3 && (
          <!-- Apple-Style Content Fade Overlay + Show More Button -->
          <div class="relative -mt-8">
            <!-- iOS-style content fade overlay -->
            <div class="apple-ios-content-fade" id="experience-fade-hint" aria-hidden="true"></div>
            
            <!-- Apple iOS-native Show More button -->
            <div class="relative z-30 flex justify-center pt-12">
              <button 
                id="experience-toggle"
                class="apple-ios-button group"
                onclick="toggleExperienceItems()"
                type="button"
                aria-label="Show more work experience"
              >
                <div class="flex items-center justify-center space-x-3">
                  <span class="apple-ios-button-text">Show More Experience</span>
                  <div class="apple-ios-chevron-container">
                    <svg class="apple-ios-chevron" id="experience-chevron" width="12" height="12" viewBox="0 0 12 12" fill="none">
                      <path d="M2.5 4.5L6 8L9.5 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </div>
                </div>
              </button>
            </div>
          </div>
          </div>
        )}
      </LiquidGlassCard>
      
      <!-- Apple HIG Subtle Separator -->
      <div class="apple-separator" aria-hidden="true"></div>
      
      <!-- Technical Skills Section - OCD-Friendly Organization -->
      <LiquidGlassCard id="skills" class="p-8 apple-section-animate" data-apple-delay="4" role="region" aria-labelledby="skills-heading">
        <header class="mb-8">
          <h2 id="skills-heading" class="apple-section-title text-center">
            <a href="#skills" class="hover:underline transition-all duration-200" aria-describedby="skills-description">
              Technical Skills
            </a>
          </h2>
          <p id="skills-description" class="text-center apple-caption mt-2 opacity-75">
            Organized by expertise level and domain specialization
          </p>
        </header>
        
        <!-- Skills organized in predictable, hierarchical structure for OCD-friendly navigation -->
        <div class="ocd-skills-container" role="list" aria-label="Technical skill categories">
          {skills.map((skillGroup, index) => {
            // Consistent icon mapping for predictable visual patterns
            const skillIcons = [
              'heroicons:cloud',              // Cloud Platforms & IaC
              'simple-icons:kubernetes',      // Container Orchestration  
              'heroicons:arrow-path',         // CI/CD & DevOps
              'heroicons:chart-bar',          // Observability & Monitoring
              'heroicons:code-bracket',       // Programming & Scripting
              'heroicons:server',             // Big Data & Databases
              'heroicons:shield-check',       // Security & Compliance
              'heroicons:users'               // Soft Skills
            ];
            
            const iconName = skillIcons[index] || 'heroicons:wrench-screwdriver';
            
            return (
              <article 
                class="ocd-skill-category apple-experience-container" 
                role="listitem"
                aria-labelledby={`skill-category-${index}`}
                data-category-level={skillGroup.level}
              >
                <div class="glass-card ocd-skill-card">
                  <header class="ocd-skill-header">
                    <h3 id={`skill-category-${index}`} class="apple-headline ocd-category-title">
                      <div class="ocd-icon-container" aria-hidden="true">
                        <LiquidGlassIcon name={iconName} size={20} variant="default" />
                      </div>
                      <span class="ocd-category-name">{skillGroup.name}</span>
                    </h3>
                    {skillGroup.level && (
                      <div class="ocd-proficiency-badge" role="img" aria-label={`Proficiency level: ${skillGroup.level}`}>
                        <span class="ocd-level-indicator">{skillGroup.level}</span>
                      </div>
                    )}
                  </header>
                  
                  <div class="ocd-skills-grid" role="list" aria-label={`${skillGroup.name} skills`}>
                    {skillGroup.keywords.map((skill, skillIndex) => {
                      const hasLink = skillGroup.links && skillGroup.links[skill];
                      const Component = hasLink ? 'a' : 'span';
                      const linkProps = hasLink ? {
                        href: skillGroup.links[skill],
                        target: '_blank',
                        rel: 'noopener noreferrer',
                        title: `Learn more about ${skill} - Educational resource`,
                        'data-contact-type': 'skill-education',
                        'data-contact-value': skill,
                        'aria-describedby': `skill-${index}-${skillIndex}-desc`
                      } : {
                        'aria-describedby': `skill-${index}-${skillIndex}-desc`
                      };
                      
                      return (
                        <div class="ocd-skill-item" role="listitem">
                          <Component 
                            class={`ocd-skill-token glass-token apple-subheadline ${hasLink ? 'ocd-skill-link' : 'ocd-skill-static'}`}
                            {...linkProps}
                          >
                            <span class="ocd-skill-text">{skill}</span>
                            {hasLink && (
                              <svg class="ocd-external-link-icon" width="12" height="12" viewBox="0 0 12 12" fill="none" aria-hidden="true">
                                <path d="M3.5 3C3.22386 3 3 3.22386 3 3.5C3 3.77614 3.22386 4 3.5 4H7.29289L3.14645 8.14645C2.95118 8.34171 2.95118 8.65829 3.14645 8.85355C3.34171 9.04882 3.65829 9.04882 3.85355 8.85355L8 4.70711V8.5C8 8.77614 8.22386 9 8.5 9C8.77614 9 9 8.77614 9 8.5V3.5C9 3.22386 8.77614 3 8.5 3H3.5Z" fill="currentColor"/>
                              </svg>
                            )}
                          </Component>
                          <span id={`skill-${index}-${skillIndex}-desc`} class="sr-only">
                            {hasLink ? `External link to ${skill} documentation` : `${skill} skill in ${skillGroup.name} category`}
                          </span>
                        </div>
                      );
                    })}
                  </div>
                </div>
              </article>
            );
          })}
        </div>
      </LiquidGlassCard>
      
      <!-- Apple HIG Subtle Separator -->
      <div class="apple-separator" aria-hidden="true"></div>
      
      <!-- Education Section -->
      <LiquidGlassCard id="education" class="p-8 apple-section-animate" data-apple-delay="5">
        <h2 class="apple-section-title text-center mb-8">
          <a href="#education" class="hover:underline transition-all duration-200">
            Education
          </a>
        </h2>
        <div class="space-y-6">
          {education.map((edu, index) => (
            <div class="apple-experience-container">
              {/* Apple HIG Education Separator */}
              {index > 0 && <div class="apple-job-separator" aria-hidden="true"></div>}
              
              <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-4">
                <div class="flex-1">
                  <h3 class="apple-headline mb-2 text-xl font-semibold">
                    {edu.studyType} in {edu.area}
                  </h3>
                  <p class="apple-subheadline mb-3 text-lg font-medium">
                    {edu.institution}
                  </p>
                </div>
                <div class="flex-shrink-0 mt-2 md:mt-0">
                  <p class="apple-caption text-sm font-medium px-3 py-1 rounded-full" 
                     style="background: var(--glass-bg); color: var(--foreground);">
                    {new Date(edu.startDate).getFullYear()} - {new Date(edu.endDate).getFullYear()}
                  </p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </LiquidGlassCard>
      
      <!-- Apple HIG Subtle Separator -->
      <div class="apple-separator" aria-hidden="true"></div>
      
      <!-- Key Projects Section -->
      <LiquidGlassCard id="projects" class="p-8 apple-section-animate" data-apple-delay="6">
        <h2 class="apple-section-title text-center mb-8">
          <a href="#projects" class="hover:underline transition-all duration-200">
            Key Projects
          </a>
        </h2>
        <div class="space-y-8 2xl:columns-2 2xl:gap-8 2xl:space-y-0" id="projects-container">
          {projects.map((project, index) => (
            <div class={`project-item ${index >= 3 ? 'hidden' : ''}`}>
              {/* Apple HIG Project Separator */}
              {index > 0 && <div class="apple-job-separator" aria-hidden="true"></div>}
              
              <div class="apple-experience-container">
                <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-4">
                <div class="flex-1">
                  <h3 class="apple-title-2 mb-2">
                    {project.url ? (
                      <a href={project.url} target="_blank" rel="noopener noreferrer" class="hover:underline" style="color: var(--link-color);">
                        {project.name}
                      </a>
                    ) : project.name}
                  </h3>
                  <p class="apple-experience-summary">{project.description}</p>
                </div>
              </div>
              
              {project.highlights && (
                <div class="grid grid-cols-1 gap-3 mb-4">
                  {project.highlights.map((highlight) => (
                    <div class="apple-highlight-card">
                      <p class="apple-highlight-text">{highlight}</p>
                    </div>
                  ))}
                </div>
              )}

              {project.keywords && (
                <div class="flex flex-wrap gap-2">
                  {project.keywords.map((keyword) => (
                    <span class="glass-token apple-subheadline px-4 py-2 transition-all duration-200">
                      {keyword}
                    </span>
                  ))}
                </div>
              )}
              </div>
            </div>
          ))}
        </div>
        
        <!-- Apple iOS-style Show More with Fade Hint for Projects -->
        {projects.length > 3 && (
          <!-- Apple-Style Content Fade Overlay + Show More Button -->
          <div class="relative -mt-8">
            <!-- iOS-style content fade overlay -->
            <div class="apple-ios-content-fade" id="projects-fade-hint" aria-hidden="true"></div>
            
            <!-- Apple iOS-native Show More button -->
