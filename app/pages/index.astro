<script>
  // Toggle Experience Items
  function toggleExperienceItems() {
    const hiddenItems = document.querySelectorAll('.experience-item.hidden');
    const button = document.getElementById('experience-toggle');
    const buttonText = button?.querySelector('.apple-ios-button-text');
    const chevron = document.getElementById('experience-chevron');
    const fadeHint = document.getElementById('experience-fade-hint');
    
    if (hiddenItems.length > 0) {
      // Show all hidden items
      hiddenItems.forEach(item => item.classList.remove('hidden'));
      if (buttonText) buttonText.textContent = 'Show Less Experience';
      if (chevron) chevron.style.transform = 'rotate(180deg)';
      // Hide iOS fade overlay when expanded
      if (fadeHint) fadeHint.style.display = 'none';
    } else {
      // Hide items after index 2 (show only first 3)
      const allItems = document.querySelectorAll('.experience-item');
      allItems.forEach((item, index) => {
        if (index >= 3) {
          item.classList.add('hidden');
        }
      });
      if (buttonText) buttonText.textContent = 'Show More Experience';
      if (chevron) chevron.style.transform = 'rotate(0deg)';
      // Show iOS fade overlay when collapsed
      if (fadeHint) fadeHint.style.display = 'flex';
    }
  }

