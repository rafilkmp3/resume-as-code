---
import resumeData from '../data/resume.json';
import { getRuntimeSiteUrl } from '../utils/site-url.ts';
import { QRCodePresets } from '../utils/qr-code.ts';

const { basics, work, skills, education, projects, training } = resumeData;

// Use runtime URL detection for reliable preview environment URLs
// This ensures QR codes and links work correctly in all environments
const siteUrl = getRuntimeSiteUrl();

// Generate secure, self-hosted QR code data URL
const qrCodeDataURL = await QRCodePresets.screen(siteUrl);
---

<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{basics.name.replace(/\s+/g, '-').toLowerCase()}</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    
    /* Hide any potential title bleeding through */
    html, html * {
      position: relative;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', system-ui, sans-serif;
      line-height: 1.6;
      color: #1a1a1a;
      background: white;
      padding: 20px;
      margin: 0;
    }
    
    /* Reduce body padding for print to save space */
    @media print {
      body {
        padding: 0 !important;
      }
    }
    
    .container {
      max-width: 800px;
      margin: 0 auto;
      background: white;
      padding: 0;
      border: 1px solid #e0e0e0;
    }
    
    .header {
      text-align: center;
      margin-bottom: 2px;
      padding: 2px 8px 1px;
      border-bottom: 2px solid #1e40af;
      background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%);
    }
    
    .profile-img {
      width: 70px;
      height: 70px;
      border-radius: 50%;
      margin: 0 auto 6px;
      display: block;
      border: 2px solid #1e40af;
    }
    
    h1 {
      font-size: 2.125rem; /* Apple HIG Large Title - 34pt */
      font-weight: 700;
      line-height: 1.08;
      letter-spacing: -0.5px;
      color: #2d3748;
      margin-bottom: 2px;
      font-feature-settings: 'kern' 1, 'liga' 1, 'calt' 1;
    }
    
    .subtitle {
      font-size: 1.063rem; /* Apple HIG Body/Headline - 17pt */
      color: #4a5568;
      margin-bottom: 4px;
      font-weight: 500;
      line-height: 1.43;
      letter-spacing: -0.32px;
    }
    
    .contact-info {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 10px;
      margin-top: 4px;
    }
    
    .contact-item {
      font-size: 1.063rem; /* Apple HIG Body - 17pt */
      color: #1e40af;
      line-height: 1.43;
      letter-spacing: -0.32px;
    }
    
    .section {
      margin: 2px 0;
      padding: 0 12px;
    }
    
    h2 {
      font-size: 1.75rem; /* Apple HIG Title 1 - 28pt */
      font-weight: 700;
      line-height: 1.20;
      letter-spacing: -0.3px;
      color: #2d3748;
      margin-bottom: 2px;
      padding-bottom: 1px;
      border-bottom: 2px solid #1e40af;
      font-feature-settings: 'kern' 1, 'liga' 1, 'calt' 1;
    }
    
    .job {
      margin-bottom: 2px;
      padding-bottom: 2px;
      border-bottom: 1px solid #e0e0e0;
    }
    
    .job:last-child {
      border-bottom: none;
    }
    
    .job-title {
      font-size: 1.375rem; /* Apple HIG Title 2 - 22pt */
      font-weight: 600;
      line-height: 1.28;
      letter-spacing: 0.35px;
      color: #2563eb;
      font-feature-settings: 'kern' 1, 'liga' 1, 'calt' 1;
    }
    
    .company {
      font-size: 1.063rem; /* Apple HIG Body - 17pt */
      font-weight: 500;
      line-height: 1.43;
      letter-spacing: -0.32px;
      color: #2d3748;
    }
    
    .date {
      font-size: 1rem; /* Apple HIG Callout - 16pt */
      font-weight: 400;
      line-height: 1.5;
      letter-spacing: -0.32px;
      color: #374151;
      margin-bottom: 4px;
      opacity: 0.8;
    }
    
    .description {
      font-size: 1rem; /* Apple HIG Callout - 16pt */
      font-weight: 400;
      line-height: 1.47;
      color: #374151;
      margin-bottom: 4px;
      font-style: italic;
    }
    
    .skills-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }
    
    .skill-category h3 {
      font-size: 1.25rem; /* Apple HIG Title 3 - 20pt */
      font-weight: 600;
      line-height: 1.25;
      letter-spacing: 0.38px;
      color: #1e40af;
      margin-bottom: 4px;
    }
    
    .skill-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 5px;
    }
    
    .skill-tag {
      background: #1e40af;
      color: white;
      padding: 6px 12px;
      border-radius: 999px; /* Apple HIG capsule shape */
      font-size: 0.75rem; /* Apple HIG Caption 1 - 12pt */
      margin: 2px;
      display: inline-block;
      font-weight: 500;
      line-height: 1.33;
      letter-spacing: 0px;
    }
    
    /* Enhanced Paper CSS-inspired print optimizations */
    @page {
      size: A4;
      margin: 0.5in;
    }
    
    /* Enhanced PDF optimizations for browser Print to PDF */
    @media print {
      * {
        -webkit-print-color-adjust: exact !important;
        print-color-adjust: exact !important;
      }
      
      body { 
        margin: 0 !important; 
        padding: 0 !important;
        font-size: 12pt;
        line-height: 1.4;
      }
      
      .container { 
        border: none; 
        max-width: none;
        box-shadow: none;
        margin: 0 !important;
        padding: 0 !important;
      }
      
      .header {
        margin-top: 0 !important;
        padding-top: 8pt !important;
        page-break-inside: avoid;
        background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%) !important;
        margin-bottom: 6pt;
      }
      
      /* Hide Netlify deploy preview banners in PDF */
      iframe[src*="netlify.com"],
      iframe[src*="app.netlify.com"],
      iframe,
      [data-netlify-deploy-banner],
      .netlify-drawer,
      div[class*="netlify"],
      div[id*="netlify"],
      *[src*="app.netlify.com"] {
        display: none !important;
        visibility: hidden !important;
        position: absolute !important;
        left: -9999px !important;
        width: 0 !important;
        height: 0 !important;
        overflow: hidden !important;
      }
      
      .section { 
        page-break-inside: avoid;
        margin: 4pt 0;
        padding: 0 0;
      }
      
      .job { 
        page-break-inside: avoid;
        margin-bottom: 5pt;
        border-bottom: 1pt solid #e0e0e0;
      }
      
      .footer {
        page-break-inside: avoid;
        margin-top: 8pt;
      }
      
      .footer-content {
        flex-direction: row;
        align-items: center;
      }
      
      .qr-code {
        width: 60pt;
        height: 60pt;
      }
      
      /* Typography optimizations for print - compressed */
      h1 { font-size: 22pt; line-height: 1.1; }
      h2 { font-size: 16pt; line-height: 1.2; margin-bottom: 6pt; }
      .job-title { font-size: 13pt; line-height: 1.2; }
      .company { font-size: 11pt; line-height: 1.2; }
      .date, .description { font-size: 10pt; line-height: 1.3; }
      .skill-tag { font-size: 9pt; }
      
      /* Compress list spacing */
      ul { margin: 4pt 0; }
      li { margin-bottom: 1pt; line-height: 1.3; }
      
      /* Compress paragraph spacing */
      p { margin: 2pt 0; line-height: 1.3; }
    }
    
    .summary {
      text-align: justify;
      line-height: 1.3;
      margin-bottom: 8px;
    }
    
    ul {
      padding-left: 12px;
      margin: 2px 0;
    }
    
    li {
      margin-bottom: 0px;
      line-height: 1.2;
    }
    
    .footer {
      margin-top: 8px;
      padding: 6px 12px;
      border-top: 2px solid #1e40af;
      color: #374151;
      font-size: 0.9em;
      background: #f8f9ff;
    }
    
    .footer-content {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 20px;
      width: 100%;
    }
    
    .footer-text {
      flex: 1;
    }
    
    .footer-qr {
      flex-shrink: 0;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
    .qr-code {
      width: 100px;
      height: 100px;
      border-radius: 8px;
      border: 1px solid #1e40af;
    }
    
    .footer a {
      color: #1e40af;
      text-decoration: none;
      font-weight: 600;
    }
    
    @media print {
      .footer-content {
        flex-direction: row;
        align-items: center;
      }
      .qr-code {
        width: 80px;
        height: 80px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <header class="header">
      <img src={`${siteUrl}/${basics.image}`} alt={basics.name} class="profile-img" />
      <h1>{basics.name}</h1>
      <p class="subtitle">{basics.label}</p>
      <div class="contact-info">
        <span class="contact-item">üìß {basics.email}</span>
        <span class="contact-item">üì± {basics.phone}</span>
        <span class="contact-item">üìç {basics.location.city}, {basics.location.region}</span>
      </div>
    </header>

    <main>
      <section class="section">
        <h2>Professional Summary</h2>
        <p class="summary">{basics.summary}</p>
      </section>

      <section class="section">
        <h2>Professional Experience</h2>
        {work.map((job) => (
          <div class="job">
            <div class="job-title">{job.position}</div>
            <div class="company">{job.name}</div>
            <div class="date">{job.startDate} - {job.endDate || 'Present'}</div>
            <p>{job.summary}</p>
            {job.highlights && (
              <ul>
                {job.highlights.map((highlight) => (
                  <li>{highlight}</li>
                ))}
              </ul>
            )}
          </div>
        ))}
      </section>

      <section class="section">
        <h2>Technical Skills</h2>
        <div class="skills-grid">
          {skills.map((skillGroup) => (
            <div class="skill-category">
              <h3>{skillGroup.name}</h3>
              <div class="skill-tags">
                {skillGroup.keywords.map((skill) => (
                  <span class="skill-tag">{skill}</span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </section>

      {projects && projects.length > 0 && (
        <section class="section">
          <h2>Key Projects</h2>
          {projects.map((project) => (
            <div class="job">
              <div class="job-title">{project.name}</div>
              {project.url && <div class="company"><a href={project.url}>{project.url}</a></div>}
              <div class="description">{project.description}</div>
              {project.highlights && (
                <ul>
                  {project.highlights.map((highlight) => (
                    <li>{highlight}</li>
                  ))}
                </ul>
              )}
              {project.keywords && (
                <div class="skill-tags" style="margin-top: 0.5rem;">
                  {project.keywords.map((keyword) => (
                    <span class="skill-tag">{keyword}</span>
                  ))}
                </div>
              )}
            </div>
          ))}
        </section>
      )}

      {education && education.length > 0 && (
        <section class="section">
          <h2>Education</h2>
          {education.map((edu) => (
            <div class="job">
              <div class="job-title">{edu.studyType} in {edu.area}</div>
              <div class="company">{edu.institution}</div>
              <div class="date">{edu.startDate} - {edu.endDate}</div>
            </div>
          ))}
        </section>
      )}

      {training && training.length > 0 && (
        <section class="section">
          <h2>Training</h2>
          {training.map((cert) => (
            <div class="job">
              <div class="job-title">{cert.name}</div>
              <div class="company">{cert.issuer}</div>
              <div class="date">{cert.date}</div>
              {cert.highlights && cert.highlights.length > 0 && (
                <ul>
                  {cert.highlights.map((highlight) => (
                    <li>{highlight}</li>
                  ))}
                </ul>
              )}
            </div>
          ))}
        </section>
      )}
    </main>
    
    <footer class="footer">
      <div class="footer-content">
        <div class="footer-text">
          <p>üìÑ View the latest version of this resume online: <a href={siteUrl}>{siteUrl}</a></p>
        </div>
        <div class="footer-qr">
          <img 
            src={qrCodeDataURL}
            alt="QR Code for resume website"
            class="qr-code"
          />
        </div>
      </div>
    </footer>
  </div>
</body>
</html>