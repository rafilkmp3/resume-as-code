---
import LiquidGlassIcon from './LiquidGlassIcon.astro';

export interface Props {
  url: string;
  class?: string;
}

const { url, class: className } = Astro.props;

// Use local QR code images generated at build time for better performance
const qrCodeUrl = '/assets/images/qr-code-modal.png';
---

<button
  class={`apple-contact-badge group ${className || ''}`}
  onclick={`showQRModal('${qrCodeUrl}', '${url}')`}
  type="button"
  aria-label="Show QR code to share this resume"
  data-contact-type="qr-share"
  data-contact-value={url}
>
  <div class="apple-contact-icon">
    <LiquidGlassIcon name="heroicons:qr-code" size={20} variant="subtle" />
  </div>
  <div class="apple-contact-info">
    <div class="apple-contact-label">
      Share via QR
    </div>
    <div class="apple-contact-value">
      Scan to open on phone
    </div>
  </div>
</button>

<!-- QR Modal -->
<div id="qr-modal" class="qr-modal" onclick="closeQRModal()">
  <div class="qr-content" onclick="event.stopPropagation()">
    <div class="qr-header">
      <h3>Scan to View Resume</h3>
      <button onclick="closeQRModal()" class="close-btn">&times;</button>
    </div>
    <div class="qr-image-container">
      <img id="qr-image" src="" alt="QR Code" />
    </div>
    <div class="qr-url" id="qr-url"></div>
    <div class="qr-footer">
      <p>Scan with your phone camera or QR reader</p>
    </div>
  </div>
</div>

<style>
  /* Apple-Style Contact Badge Components - Consistent with ContactButton.astro */
  .apple-contact-badge {
    display: flex;
    align-items: center;
    padding: clamp(0.75rem, 1.5vw, 1rem) clamp(0.875rem, 2vw, 1.25rem);
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(15px) saturate(150%);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 16px; /* Apple HIG rounded corners */
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    color: inherit;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    min-width: 0; /* Allow flex shrinkage */
    width: 100%; /* Full width for better text space */
    box-sizing: border-box;
    cursor: pointer;
    /* Smart text handling - prevents awkward line breaks */
    container-type: inline-size; /* Enable container queries */
  }

  .apple-contact-badge:hover {
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .apple-contact-icon {
    width: 44px;
    height: 44px;
    /* Liquid Glass Background - Matching LiquidGlassIcon component */
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 50%,
      rgba(255, 255, 255, 0.1) 100%
    );
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 12px;
    flex-shrink: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    /* Enhanced shadows for depth */
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.2),
      0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .apple-contact-badge:hover .apple-contact-icon {
    transform: translateY(-2px) scale(1.05);
    /* Enhanced lighting on hover */
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.15) 0%,
      rgba(255, 255, 255, 0.08) 50%,
      rgba(255, 255, 255, 0.15) 100%
    );
    /* Intensified shadows and highlights */
    box-shadow:
      0 12px 40px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.3),
      0 2px 0 rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .apple-contact-info {
    flex: 1;
    min-width: 0; /* Allows text truncation */
    overflow: hidden; /* Prevent content overflow */
  }

  .apple-contact-label {
    font-size: clamp(0.75rem, 1vw, 0.8125rem); /* Fluid: 12pt - 13pt */
    font-weight: 500;
    line-height: 1.2;
    color: var(--foreground);
    opacity: 0.7;
    margin-bottom: 2px;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    white-space: nowrap; /* Prevent label wrapping */
  }

  .apple-contact-value {
    font-size: clamp(0.875rem, 1.25vw, 0.9375rem); /* Fluid: 14pt - 15pt */
    font-weight: 600;
    line-height: 1.3;
    color: var(--foreground);
    /* Apple HIG Smart Text Handling - Responsive Approach */
    overflow-wrap: break-word;
    word-break: normal; /* Changed from break-word to prevent awkward breaks */
    hyphens: auto;
    /* Default: Single line with ellipsis */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Container queries for responsive text handling */
  @container (min-width: 200px) {
    .apple-contact-value {
      white-space: normal; /* Allow wrapping on wider containers */
      overflow: visible;
      text-overflow: unset;
      word-spacing: -0.02em; /* Tighter word spacing for better fit */
    }
  }

  /* Enhanced responsive breakpoints for contact badges */
  @media (max-width: 640px) {
    .apple-contact-badge {
      padding: 0.75rem 0.875rem; /* Tighter on mobile */
      min-height: 60px; /* Ensure touch target */
    }

    .apple-contact-value {
      font-size: 0.875rem; /* 14pt on mobile */
      line-height: 1.25;
      /* Mobile: Allow controlled wrapping */
      white-space: normal;
      overflow: visible;
      text-overflow: unset;
      hyphens: auto;
      word-break: break-word;
      /* Limit to 2 lines maximum on mobile */
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  }

  /* Dark theme adaptations */
  :global(.dark) .apple-contact-badge {
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  :global(.dark) .apple-contact-badge:hover {
    background: rgba(0, 0, 0, 0.3);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
  }

  :global(.dark) .apple-contact-icon {
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.05) 0%,
      rgba(255, 255, 255, 0.02) 50%,
      rgba(255, 255, 255, 0.05) 100%
    );
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1),
      0 1px 0 rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.1);
  }

  :global(.dark) .apple-contact-badge:hover .apple-contact-icon {
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.08) 0%,
      rgba(255, 255, 255, 0.04) 50%,
      rgba(255, 255, 255, 0.08) 100%
    );
    box-shadow:
      0 12px 40px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.15),
      0 2px 0 rgba(255, 255, 255, 0.08);
  }

  .qr-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(5px);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }

  .qr-content {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    max-width: 400px;
    width: 90%;
    text-align: center;
    position: relative;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .qr-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .qr-header h3 {
    margin: 0;
    color: #2d3748;
    font-size: 1.25rem;
  }

  .close-btn {
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    color: #718096;
    line-height: 1;
  }

  .close-btn:hover {
    color: #2d3748;
  }

  .qr-image-container {
    margin: 1.5rem 0;
    display: flex;
    justify-content: center;
  }

  .qr-image-container img {
    max-width: 250px;
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .qr-url {
    font-size: 0.9rem;
    color: #667eea;
    word-break: break-all;
    margin: 1rem 0;
    font-weight: 500;
  }

  .qr-footer {
    font-size: 0.8rem;
    color: #718096;
    margin-top: 1rem;
  }

  @media (max-width: 640px) {
    .qr-content {
      padding: 1.5rem;
    }
    
    .qr-image-container img {
      max-width: 200px;
    }
  }
</style>

<script>
  function showQRModal(qrImageUrl, url) {
    const modal = document.getElementById('qr-modal');
    const image = document.getElementById('qr-image');
    const urlElement = document.getElementById('qr-url');
    
    if (modal && image && urlElement) {
      image.src = qrImageUrl;
      urlElement.textContent = url;
      modal.style.display = 'flex';
      
      // Prevent body scroll
      document.body.style.overflow = 'hidden';
    }
  }

  function closeQRModal() {
    const modal = document.getElementById('qr-modal');
    if (modal) {
      modal.style.display = 'none';
      // Restore body scroll
      document.body.style.overflow = '';
    }
  }

  // Close modal on Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeQRModal();
    }
  });

  // Make functions global so they can be called from onclick
  if (typeof window !== 'undefined') {
    window.showQRModal = showQRModal;
    window.closeQRModal = closeQRModal;
  }
</script>