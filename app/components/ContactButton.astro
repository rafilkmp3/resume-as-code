---
import LiquidGlassIcon from './LiquidGlassIcon.astro';

export interface Props {
  icon: string;
  label: string;
  value: string;
  href: string;
  network?: string;
}

const { icon, label, value, href, network = '' } = Astro.props;

// Map network names to Iconify icon names
const getIconName = (network: string, fallbackIcon: string) => {
  const iconMap: Record<string, string> = {
    'LinkedIn': 'simple-icons:linkedin',
    'GitHub': 'simple-icons:github',
    'WhatsApp': 'simple-icons:whatsapp',
    'cal.com': 'heroicons:calendar',
    'Email': 'heroicons:envelope'
  };
  
  // If fallbackIcon is already an Iconify name (contains ':'), use it directly
  if (fallbackIcon.includes(':')) {
    return fallbackIcon;
  }
  
  // If fallbackIcon is a URL (contains 'http'), ignore it and use network mapping
  if (fallbackIcon.includes('http')) {
    return iconMap[network] || 'heroicons:link';
  }
  
  return iconMap[network] || iconMap[fallbackIcon] || 'heroicons:link';
};

const iconName = getIconName(network, icon);
---

<a 
  href={href} 
  class="apple-contact-badge group"
  target="_blank"
  rel="noopener noreferrer"
  aria-label={`${label}: ${value}`}
  data-contact-type={network.toLowerCase() || label.toLowerCase()}
  data-contact-value={value}
>
  <div class="apple-contact-icon">
    <LiquidGlassIcon name={iconName} size={20} variant="subtle" />
  </div>
  <div class="apple-contact-info">
    <div class="apple-contact-label">
      {label}
    </div>
    <div class="apple-contact-value">
      {value}
    </div>
  </div>
</a>

<style>
  /* Apple-Style Contact Badge Components - Consistent with main stylesheet */
  .apple-contact-badge {
    display: flex;
    align-items: center;
    padding: clamp(0.75rem, 1.5vw, 1rem) clamp(0.875rem, 2vw, 1.25rem);
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(15px) saturate(150%);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 16px; /* Apple HIG rounded corners */
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    color: inherit;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    min-width: 0; /* Allow flex shrinkage */
    width: 100%; /* Full width for better text space */
    box-sizing: border-box;
    /* Smart text handling - prevents awkward line breaks */
    container-type: inline-size; /* Enable container queries */
  }

  .apple-contact-badge:hover {
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .apple-contact-icon {
    width: 44px;
    height: 44px;
    /* Liquid Glass Background - Matching LiquidGlassIcon component */
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 50%,
      rgba(255, 255, 255, 0.1) 100%
    );
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 12px;
    flex-shrink: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    /* Enhanced shadows for depth */
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.2),
      0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .apple-contact-badge:hover .apple-contact-icon {
    transform: translateY(-2px) scale(1.05);
    /* Enhanced lighting on hover */
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.15) 0%,
      rgba(255, 255, 255, 0.08) 50%,
      rgba(255, 255, 255, 0.15) 100%
    );
    /* Intensified shadows and highlights */
    box-shadow: 
      0 12px 40px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.3),
      0 2px 0 rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .apple-contact-info {
    flex: 1;
    min-width: 0; /* Allows text truncation */
    overflow: hidden; /* Prevent content overflow */
  }

  .apple-contact-label {
    font-size: clamp(0.75rem, 1vw, 0.8125rem); /* Fluid: 12pt - 13pt */
    font-weight: 500;
    line-height: 1.2;
    color: var(--foreground);
    opacity: 0.7;
    margin-bottom: 2px;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    white-space: nowrap; /* Prevent label wrapping */
  }

  .apple-contact-value {
    font-size: clamp(0.875rem, 1.25vw, 0.9375rem); /* Fluid: 14pt - 15pt */
    font-weight: 600;
    line-height: 1.3;
    color: var(--foreground);
    /* Apple HIG Smart Text Handling - Responsive Approach */
    overflow-wrap: break-word;
    word-break: normal; /* Changed from break-word to prevent awkward breaks */
    hyphens: auto;
    /* Default: Single line with ellipsis */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Container queries for responsive text handling */
  @container (min-width: 200px) {
    .apple-contact-value {
      white-space: normal; /* Allow wrapping on wider containers */
      overflow: visible;
      text-overflow: unset;
      word-spacing: -0.02em; /* Tighter word spacing for better fit */
    }
  }
  
  /* Enhanced responsive breakpoints for contact badges */
  @media (max-width: 640px) {
    .apple-contact-badge {
      padding: 0.75rem 0.875rem; /* Tighter on mobile */
      min-height: 60px; /* Ensure touch target */
    }
    
    .apple-contact-value {
      font-size: 0.875rem; /* 14pt on mobile */
      line-height: 1.25;
      /* Mobile: Allow controlled wrapping */
      white-space: normal;
      overflow: visible;
      text-overflow: unset;
      hyphens: auto;
      word-break: break-word;
      /* Limit to 2 lines maximum on mobile */
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  }

  /* Dark theme adaptations */
  :global(.dark) .apple-contact-badge {
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }
  
  :global(.dark) .apple-contact-badge:hover {
    background: rgba(0, 0, 0, 0.3);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
  }

  :global(.dark) .apple-contact-icon {
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.05) 0%,
      rgba(255, 255, 255, 0.02) 50%,
      rgba(255, 255, 255, 0.05) 100%
    );
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1),
      0 1px 0 rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  :global(.dark) .apple-contact-badge:hover .apple-contact-icon {
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.08) 0%,
      rgba(255, 255, 255, 0.04) 50%,
      rgba(255, 255, 255, 0.08) 100%
    );
    box-shadow: 
      0 12px 40px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.15),
      0 2px 0 rgba(255, 255, 255, 0.08);
  }
</style>